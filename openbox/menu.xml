<?xml version="1.0" encoding="utf-8"?>
<openbox_menu xmlns="http://openbox.org/3.4/menu">
	<menu id="apps-office-menu" label="LibreOffice">
		<item label="LibreOffice Base">
			<action name="Execute">
				<command>libreoffice</command>
			</action>
		</item>
		<item label="LibreOffice Calc">
			<action name="Execute">
				<command>libreoffice --calc</command>
			</action>
		</item>
		<item label="LibreOffice Draw">
			<action name="Execute">
				<command>libreoffice --draw</command>
			</action>
		</item>
		<item label="LibreOffice Impress">
			<action name="Execute">
				<command>libreoffice --impress</command>
			</action>
		</item>
		<item label="LibreOffice Math">
			<action name="Execute">
				<command>libreoffice --math</command>
			</action>
		</item>
		<item label="LibreOffice Writer">
			<action name="Execute">
				<command>libreoffice --writer</command>
			</action>
		</item>
	</menu>
	<menu id="system-menu" label="System">
		<item label="Openbox Configuration Manager">
			<action name="Execute">
				<command>obconf</command>
				<startupnotify>
					<enabled>yes</enabled>
				</startupnotify>
			</action>
		</item>
		<item label="Tint2 Configuration Manager">
			<action name="Execute">
				<execute>tint2conf</execute>
			</action>
		</item>
		<separator/>
		<item label="Reconfigure Openbox">
			<action name="Reconfigure"/>
		</item>
	</menu>
	<menu id="root-menu" label="Openbox 3">
		<separator label="Menu"/>
		<item label="URxvt">
			<action name="Execute">
				<execute>urxvtc</execute>
			</action>
		</item>
		<item label="Firefox">
			<action name="Execute">
				<execute>firefox</execute>
			</action>
		</item>
		<item label="PCManFM">
			<action name="Execute">
				<execute>pcmanfm</execute>
			</action>
		</item>
		<item label="ncmpcpp">
			<action name="Execute">
				<execute>urxvtc -e ncmpcpp</execute>
			</action>
		</item>
		<item label="mpv">
			<action name="Execute">
				<execute>mpv -profile=pseudo-gui</execute>
			</action>
		</item>
		<!-- menu id="apps-graphics-menu"/-->
		<item label="Tranmission">
			<action name="Execute">
				<execute>urxvtc -e transmission-remote-cli</execute>
			</action>
		</item>
		<item label="Vim">
			<action name="Execute">
				<execute>urxvtc -e vim</execute>
			</action>
		</item>
		<item label="PPSSPP">
			<action name="Execute">
				<execute>ppsspp</execute>
			</action>
		</item>
		<menu id="apps-office-menu"/>
		<!-- separator label="System" /-->
		<menu id="system-menu"/>
		<separator/>
		<item label="Log Out">
			<action name="Exit">
				<prompt>yes</prompt>
			</action>
		</item>
	</menu>
</openbox_menu>
